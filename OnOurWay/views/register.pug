extends layout

block content

    h1.page-title.margin-left-32 Register page
    -if (failed_register_message !== undefined) {
        p.desciption= failed_register_message
    -}
    form.form-default.margin-left-64(action='/register' method='post')
        label.form-label(for='username') E-mail address or mobile phone number:
        input#username.form-input(type='text' name='username')
        label.form-label(for='password') Password:
        input#password.form-input(type='password' name='password')
        label.form-label(for='first_name') First name:
        input#username.form-input(type='text' name='first_name')
        label.form-label(for='last_name') Last name:
        input#password.form-input(type='text' name='last_name')
        label.form-label(for='credit_card_number') Credit card number:
        input#username.form-input(type='text' name='credit_card_number')
        label.form-label(for='credit_card_cvc') Credit card cvc:
        input#password.form-input(type='text' name='credit_card_cvc')
        label.form-label(for='credit_card_effective_date') Credit card effective date:
        input#username.form-input(type='text' name='credit_card_effective_date')
        label.form-label(for='credit_card_expiry_date') Credit card expiry date:
        input#username.form-input(type='text' name='credit_card_expiry_date')
        label.form-label(for='phone_number') Phone number:
        input#username.form-input(type='text' name='phone_number')
        label.form-label(for='email') Email:
        input#username.form-input(type='text' name='email')
        button.button-main.button-login-align(action='submit') Register your account
        .margin-left-64