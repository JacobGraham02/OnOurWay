extends ../layout

block content

  article#google-maps-gui
  section#carpool_address_section
    article#carpool_address_container
      ul#carpool_detailed_list
        li#carpool_list_item_start_address= "Carpool starting address: " + carpool_information.starting_address
        li#carpool_list_item_end_address= "Carpool ending address: " + carpool_information.ending_address 
        li#carpool_list_item_maximum_passengers= "Maximum passengers allowed in carpool: " + carpool_information.maximum_passengers
        li#carpool_list_start_time= "Scheduled start time of carpool: " + carpool_information.start_time
        li#carpool_list_end_time= "Scheduled end time of carpool: " + carpool_information.end_time 
    div#directions_sidebar
  script(src='/javascripts/google_maps_detailed_view.js')
  script(src='/javascripts/get_query_parameters.js')
  script(async='' defer='' src='https://maps.googleapis.com/maps/api/js?key=AIzaSyAKz3oZ9x--Z_1py4gMmwS0ETUG112nXJY&libraries=places&callback=initMap&v=weekly')